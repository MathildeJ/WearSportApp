<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendNotificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/notification_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="send notification"/>

        <Button
            android:id="@+id/notification_action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="send action notification"/>

        <Button
            android:id="@+id/notification_inline_action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="send inline action notification"/>

        <Button
            android:id="@+id/notification_pre_defined_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send notification predefined responses" />

        <Button
            android:id="@+id/notification_message_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send message notification" />

        <Button
            android:id="@+id/notification_big_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send big notification" />

    </LinearLayout>

</ScrollView>
